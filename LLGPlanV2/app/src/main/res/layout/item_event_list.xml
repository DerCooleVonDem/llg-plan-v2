<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/day_text_view"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/message_text_view"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"/>
    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="@dimen/textSize"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/day_text_view"
        app:layout_constraintBottom_toTopOf="@id/message_text_view"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/info_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:textColor="?attr/colorOnPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/message_text_view"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"/>


    <TextView
        android:id="@+id/message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:textColor="?attr/colorOnPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/date_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:includeFontPadding="false" />

    <View
        android:id="@+id/seperator_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/seperatorLineWidth"
        android:background="@drawable/gradient_line_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>